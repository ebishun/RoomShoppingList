<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_shopping_item"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/check_item"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:id="@+id/view_start"
                    android:layout_alignBottom="@+id/container_shopping"
                    android:layout_alignTop="@+id/container_shopping"
                    android:background="@color/green"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:padding="5dp"
                    android:layout_toEndOf="@+id/view_start"
                    android:orientation="vertical"
                    android:id="@+id/container_shopping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Shopping Name"
                        android:id="@+id/txt_shopping_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Shopping Price"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_shopping_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="Quantity"
                        android:layout_marginTop="5dp"
                        android:id="@+id/txt_shopping_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>


